{% comment %}
  Custom Product Grid (from scratch) + Quick View Modal
  - Six product blocks (pick products in editor)
  - Quick view modal built with <dialog>
  - Add to Cart via AJAX
  - Special rule: if selected variant options include 'Black' AND 'Medium', auto-add the configured product
  - Optional setting: redirect to /cart after add
{% endcomment %}
<section id="custom-grid-{{ section.id }}" class="c-grid"
  data-section-id="{{ section.id }}"
  data-redirect="{{ section.settings.redirect_to_cart }}"
  {% if section.settings.auto_add_product %}
    {% assign bonus = section.settings.auto_add_product %}
    {% assign bonus_variant = nil %}
    {% for v in bonus.variants %}
      {% if v.available and bonus_variant == nil %}{% assign bonus_variant = v %}{% endif %}
    {% endfor %}
    {% if bonus_variant == nil %}{% assign bonus_variant = bonus.variants.first %}{% endif %}
    data-bonus-variant-id="{{ bonus_variant.id }}"
    data-bonus-product-title="{{ bonus.title | escape }}"
  {% endif %}
>
  <div class="c-grid__inner">
    {% for block in section.blocks %}
      {% assign p = block.settings.product %}
      <div class="c-card" {{ block.shopify_attributes }}>
        {% if p %}
          <button type="button" class="c-card__btn" data-quick-view
            aria-label="Quick view {{ p.title }}"
            data-product-handle="{{ p.handle }}">
            <div class="c-card__media">
              {% if p.featured_image %}
                <img loading="lazy" decoding="async" src="{{ p.featured_image | img_url: '540x' }}" alt="{{ p.title | escape }}">
              {% endif %}
            </div>
            <div class="c-card__meta">
              <h3 class="c-card__title">{{ p.title }}</h3>
              <p class="c-card__price">{{ p.price | money }}</p>
            </div>
          </button>
        {% else %}
          <div class="c-card c-card--placeholder">
            <div class="c-card__media"></div>
            <div class="c-card__meta">
              <h3 class="c-card__title">Pick a product</h3>
              <p class="c-card__price">—</p>
            </div>
          </div>
        {% endif %}
      </div>
    {% endfor %}
  </div>

  <dialog class="c-modal" data-quick-modal>
    <form method="dialog" class="c-modal__backdrop" data-close></form>
    <div class="c-modal__dialog" role="dialog" aria-modal="true">
      <button class="c-modal__close" data-close aria-label="Close">×</button>
      <div class="c-modal__content" data-modal-content><!-- JS injects product details --></div>
    </div>
  </dialog>
</section>

{% schema %}
{
  "name": "Custom Product Grid",
  "settings": [
    {
      "type": "product",
      "id": "auto_add_product",
      "label": "Auto-add product (e.g. Soft Winter Jacket)",
      "info": "Will be added automatically when Black + Medium variant is added to cart"
    },
    {
      "type": "checkbox",
      "id": "redirect_to_cart",
      "label": "Redirect to cart after add",
      "default": false
    }
  ],
  "blocks": [
    { "type": "product", "name": "Product", "settings": [
      { "type": "product", "id": "product", "label": "Product" }
    ]}
  ],
  "max_blocks": 6,
  "presets": [{ "name": "Custom Product Grid", "blocks": [
    { "type": "product" }, { "type": "product" }, { "type": "product" },
    { "type": "product" }, { "type": "product" }, { "type": "product" }
  ]}]
}
{% endschema %}
